<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.emergency.mesh">

    <!-- 🌐 Core Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 📍 Location (required for map + Wi-Fi Direct) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- 📶 Wi-Fi & P2P -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission
        android:name="android.permission.NEARBY_WIFI_DEVICES"
        android:usesPermissionFlags="neverForLocation" />

    <!-- 🔵 Bluetooth (for mesh discovery on Android 12+) -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />

    <!-- ✉️ SMS and Contacts -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- 📢 Notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 💾 Legacy storage (for Android 9 and below only) -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EmergencyMeshApp"
        tools:targetApi="31">

        <!-- 🏠 Home Activity (Launcher) -->
        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 📱 Emergency SMS Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- 🔗 Mesh Network Activity -->
        <activity
            android:name=".MainActivity1"
            android:exported="false" />

        <!-- 🗺️ Emergency Map Activity -->
        <activity
            android:name=".ui.MainActivity3"
            android:exported="false" />

        <!-- 🗺️ Map Display Activity -->
        <activity
            android:name=".ui.MapActivity"
            android:exported="false" />

        <!-- 👥 Manage Contacts -->
        <activity
            android:name=".ManageContactsActivity"
            android:exported="true"
            android:label="Manage Emergency Contacts" />
    </application>
</manifest>
