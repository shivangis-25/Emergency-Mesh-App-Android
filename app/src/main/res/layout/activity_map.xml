<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Heading -->
    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emergency Mesh Map"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="8dp"
        android:background="#FFCCCC"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/black" />

    <!-- Peer count top right -->
    <TextView
        android:id="@+id/tv_peer_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connected Peers: 0"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_heading"
        android:layout_margin="8dp" />

    <!-- Map -->
    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_peer_count" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        android:background="#CCFFFFFF">

        <Button
            android:id="@+id/btn_sos"
            android:text="SOS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#FF4444" />

        <Button
            android:id="@+id/btn_safe"
            android:text="I'M SAFE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#44FF44" />
    </LinearLayout>

</RelativeLayout>
